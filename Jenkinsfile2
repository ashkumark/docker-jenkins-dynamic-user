def user_name
def user_id
def group_id
node {
    user_name = sh(returnStdout: true, script: 'id -un').trim()
    user_id = sh(returnStdout: true, script: 'id -u').trim()
    group_id = sh(returnStdout: true, script: 'id -g').trim()
}

pipeline {
    agent any
    stages {
        stage('commit_stage') {
            steps {
                echo 'user_name'
                echo user_name
                echo 'user_id'
                echo user_id
                echo 'group_id'
                echo group_id
            }
        }
    }
}